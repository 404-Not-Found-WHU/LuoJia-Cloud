    +string UserId
    +string Username
    +string Password
    +register()
    +login()
    +logout()
    +updateProfile()
    +deleteAccount()
}

class ScenicSpot {
    +string SpotId
    +string Name
    +string Description
    +double Latitude
    +double Longitude
    +getInfo()
    +addSpot()
    +editSpot()
    +deleteSpot()
}

class Message {
    +string MessageId
    +string Username
    +string Content
    +DateTime Timestamp
    +postMessage()
    +deleteMessage()
    +getMessages()
}

