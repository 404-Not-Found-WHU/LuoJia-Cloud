<!DOCTYPE html>
<html lang="zh-cn">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"] - 武汉大学旅游景点推荐系统</title>
    <link rel="stylesheet" href="~/lib/bootstrap/dist/css/bootstrap.min.css" />
    <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap-icons@1.10.0/font/bootstrap-icons.css">
    <link rel="stylesheet" href="~/css/site.css" asp-append-version="true" />
    <link rel="stylesheet" href="~/ending.styles.css" asp-append-version="true" />
    
    <!-- 高德地图安全密钥配置 - 确保在API加载前配置 -->
    <script type="text/javascript">
        window._AMapSecurityConfig = {
            securityJsCode: "70c6adb4358d777dca1ea41082d936a2"
        };
    </script>
    
    <!-- 高德地图API回调函数 - 必须在API加载前定义 -->
    <script type="text/javascript">
        function initAMap() {
            console.log('高德地图API加载成功');
        }
    </script>
    
    <!-- 高德地图API引用 -->
    <script type="text/javascript" src="https://webapi.amap.com/maps?v=2.0&key=b0035edd996131b688c2f2dbef9a5bcf&plugin=AMap.Driving,AMap.PlaceSearch&callback=initAMap"></script>
</head>
<body>
    <header>
        <nav class="navbar navbar-expand-sm navbar-toggleable-sm navbar-dark bg-primary border-bottom box-shadow mb-3">
            <div class="container">
                <a class="navbar-brand" asp-area="" asp-page="/Index">武大景点推荐</a>
                <button class="navbar-toggler" type="button" data-bs-toggle="collapse" data-bs-target=".navbar-collapse" aria-controls="navbarSupportedContent"
                        aria-expanded="false" aria-label="Toggle navigation">
                    <span class="navbar-toggler-icon"></span>
                </button>
                <div class="navbar-collapse collapse d-sm-inline-flex justify-content-between">
                    <ul class="navbar-nav flex-grow-1">
                        <li class="nav-item">
                            <a class="nav-link text-light" asp-area="" asp-page="/Index">首页</a>
                        </li>
                        <li class="nav-item">
                            <a class="nav-link text-light" asp-area="" asp-page="/Privacy">隐私</a>
                        </li>
                    </ul>
                </div>
            </div>
        </nav>
    </header>
    <div class="container">
        <main role="main" class="pb-3">
            @RenderBody()
        </main>
    </div>

    <footer class="border-top footer text-muted bg-light">
        <div class="container text-center py-3">
            &copy; @DateTime.Now.Year - 武汉大学旅游景点推荐系统 - <a asp-area="" asp-page="/Privacy">隐私政策</a>
        </div>
    </footer>

    <script src="~/lib/jquery/dist/jquery.min.js"></script>
    <script src="~/lib/bootstrap/dist/js/bootstrap.bundle.min.js"></script>
    <script src="~/js/site.js" asp-append-version="true"></script>

    @await RenderSectionAsync("Scripts", required: false)
</body>
</html>